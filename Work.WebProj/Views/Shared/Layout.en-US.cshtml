<!DOCTYPE html>
<html lang="en-US">
<!-- saved from url=(0014)about:internet -->

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    @* <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"> *@
    <title>@Resources.Res.System_FrontName::@ViewBag.Title</title>
    <script src="~/Scripts/cdn/BrowerInfo.js"></script>
    <script>
        var gb_approot = '@Url.Content("~")';
    </script>
    <link rel="shortcut icon" href="/favicon.ico"/>
    <link rel="bookmark" href="/favicon.ico"/>
    <link rel="stylesheet" href="~/Content/css/vendor/swiper.css">
    <link href="~/Content/css/vendor/icomoon.css?v=@CommWebSetup.CacheVer" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>
    <link href="~/Content/css/grid.css?v=@CommWebSetup.CacheVer" rel="stylesheet">
    @if (ViewBag.IsFirstPage)
    {
        <link href="~/Content/css/index.css?v=@CommWebSetup.CacheVer" rel="stylesheet">
    }
    else
    {
        <link href="~/Content/css/page.css?v=@CommWebSetup.CacheVer" rel="stylesheet">
    }
    @RenderSection("css", false)
</head>

<body class="@ViewBag.BodyClass">

    <div id="wrapper">

        <header id="header">

            <h1 class="logo" onclick="location.href='@Url.Content("~/index")'" title="HOME">@Resources.Res.System_FrontName</h1>

            <button class="menu-trigger"><span>MENU</span></button>
            <nav id="menu">
                <a href="~/AboutUs">ABOUT US</a>
                <a href="~/Products">PRODUCTS</a>
                <ul class="sub-nav">
                    <li>
                        @* 當前分類 class+ current
                        <h4 class="collapse-title current" data-toggle="collapse">SWITCH</h4>  *@
                        <h4 class="collapse-title" data-toggle="collapse">SWITCH</h4>
                        <div class="collapse-content">
                            @* 當前子分類 class + current
                            <a href="~/Products/list" class="current">DETECT SWITCH<small>(15)</small></a> *@
                            <a href="~/Products/list">DETECT SWITCH<small>(15)</small></a>
                            <a href="~/Products/list">SLIDE SWITCH<small>(15)</small></a>
                            <a href="~/Products/list">TACT SWITCH<small>(6)</small></a>
                            <a href="~/Products/list">DIP SWITCH<small>(15)</small></a>
                            <a href="~/Products/list">PUSH SWITCH<small>(15)</small></a>
                        </div>
                    </li>

                    <li>
                        <h4 class="collapse-title" data-toggle="collapse">JACK</h4>
                        <div class="collapse-content">
                            <a href="~/Products/list">DC JACK<small>(15)</small></a>
                            <a href="~/Products/list">PHONE JACK<small>(15)</small></a>
                        </div>
                    </li>

                    <li>
                        <h4 class="collapse-title" data-toggle="collapse">CONNECTOR</h4>
                        <div class="collapse-content">
                            <a href="~/Products/list">USB2.0 CONNECTOR<small>(15)</small></a>
                            <a href="~/Products/list">USB3.0 CONNECTOR<small>(15)</small></a>
                            <a href="~/Products/list">HDMI CONNECTOR<small>(15)</small></a>
                            <a href="~/Products/list">MICRO USB<small>(15)</small></a>
                        </div>
                    </li>
                </ul>
    			<a href="~/ContactUs">CONTACT US</a>
            </nav>

            <nav class="lang-nav dropdown">
                <button data-dropdown="btn">English</button>
                <div data-dropdown="content">
                    <a href="@Url.Action("SetLanguage")?L=zh-TW&A=index">中文</a>
                    <a href="@Url.Action("SetLanguage")?L=en-US&A=index" class="current">English</a>
                </div>
            </nav>
            <form action="" class="input-group search">
                <input type="search" placeholder="Search...">
                <button class="icon-search"></button>
            </form>

        </header><!-- header //-->

        @if (ViewBag.IsFirstPage)
        {
            <div id="banner" class="swiper-container">
                <ul class="swiper-wrapper">
                    @* 圖片尺寸:w1920 x h345 *@
                    <li class="swiper-slide"><img src="~/Content/images/Index/banner1.jpg"></li>
                    <li class="swiper-slide"><img src="~/Content/images/Index/banner2.jpg"></li>
                </ul>
                <div class="swiper-pagination"></div>
            </div><!-- banner //-->

            <main id="main">
                @RenderBody()
            </main>

        } else {
            <div id="banner" class="swiper-container">
                <ul class="swiper-wrapper">
                    @* 圖片尺寸:w1920 x h238 *@
                    <li class="swiper-slide"><img src="~/Content/images/banner.jpg"></li>
                </ul>
                <div class="swiper-pagination"></div>
            </div><!-- banner //-->

            <main id="main">

                <ul class="breadcrumb wrap">
                    <li><a href="~/index">HOME</a></li>
                    @RenderSection("breadCrumb", required: false)
                    <li>@ViewBag.Target</li> @* 當前頁名稱 *@
                </ul>

                @RenderBody()

            </main>
        }

    </div><!-- wrapper //-->

    <a href="#header" class="goTop scroll"><i class="icon-angle"></i></a>

    <footer id="footer">
        <div class="wrap">
            <div class="col-7 col-sm-12 foot-nav">
                <nav class="col-4">
                    <h4>ABOUT US</h4>
                    <a href="">SERVICE</a>
                    <a href="">ADVANTAGES</a>
                </nav>
                <nav class="col-8">
                    <h4>PRODUCTS</h4>
                    <a href="">SWITCH</a>
                    <a href="">JACK</a>
                    <a href="">CONNECTOR</a>
                </nav>
            </div>

            <div class="col-5 col-sm-12 foot-contact">
                <ul class="contact list-unstyled">
                    <li><i class="icon-phone" title="TEL"></i>+886-3-3011936</li>
                    <li><i class="icon-print" title="FAX"></i>+886-3-3011937</li>
                    <li><i class="icon-skype" title="Skype"></i></li>
                    <li>OFFICE/ 4F-4 No.6, Sec.2, Dah-Shing W.Road, Taoyuan, Taiwan</li>
                    <li>CHINA PLANT/ Jiangnan Huoju Industry Development Zone, Quanzhou Fujian China</li>
                    <li>Sample Request/ <a href="mailto:sales2@roki.com.tw">sales2@roki.com.tw</a></li>
                </ul>
                <div class="copyright">ROKI ELECTRONICS CO., LTD. &copy; 2016</div>
            </div><!-- contact //-->
        </div><!-- wrap //-->
    </footer><!-- footer -->

    <script src="//code.jquery.com/jquery-latest.min.js"></script>
    <script src="~/Content/js/common.js"></script>
    <script src="~/Content/js/swiper.min.js"></script>
    <script>
        // 輪播banner
        var swiper = new Swiper('#banner', {
            autoplay: 4500,
            autoplayDisableOnInteraction: false,
            loop: true,
            speed: 1000,
            effect: 'fade',
            pagination: '.swiper-pagination',
            paginationClickable: true,
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>