@model IList<DotWeb.WebApp.Controllers.ProductIntro>
@{
    ViewBag.Title = "首頁";
    ViewBag.IsFirstPage = true;
    ViewBag.BodyClass = "index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@section Scripts {
    <script>
        var mySwiper = new Swiper('#slider', {
            autoplay: 4000,
            speed: 1000,
            spaceBetween: 15,
            slidesPerView: 3,
            slidesPerGroup: 1,
            // slidesPerColumnFill: 'row',
            autoplayDisableOnInteraction: false,
            prevButton: '.icon-chevron-thin-left',
            nextButton: '.icon-chevron-thin-right',
            breakpoints: {
                480: {
                    spaceBetween: 0,
                    slidesPerView: 'auto'
                },
                768: {
                    spaceBetween: 10,
                }
            }
        });
    </script>
}
<h2 class="font-sp">NEW PRODUCTS</h2>
<section id="slider" class="swiper-container wrap">
    <div class="swiper-wrapper">
        @foreach (var item in Model)
        {
            <figure class="swiper-slide product-list">
                <img src="@item.src">
                <a href="~/Products/content?id=@item.product_id">MORE</a>
                <figcaption>
                    <small>@item.category_l2_name</small>
                    <h4>@item.modal</h4>
                    <p class="font-sp">MORE</p>
                </figcaption>
            </figure>
        }
    </div>
</section>
<i class="icon-chevron-thin-left"></i>
<i class="icon-chevron-thin-right"></i>

