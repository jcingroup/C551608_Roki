@model  IEnumerable<DotWeb.Areas.Base.Controllers.DocInfo>

@using DotWeb.Areas.Base.Controllers;
@{
    Layout = "~/Views/Shared/Manage/RLayout.cshtml";
    ViewBag.MenuName = "系統設定";
    ViewBag.Caption = "教學影片";
}
@section breadCrumb {
    <li><a href="~/Base/Doc/ListGrid"><i class="fa-cogs"></i> @ViewBag.MenuName</a></li>
    <li>@ViewBag.Caption</li>
}
@section IncludeScript{
    @Html.Partial("Manage/JSGlobalVar")
    <script src="~/Scripts/build/comminc.js"></script>
}
@section sidebar{
    @Html.Partial("Manage/vucMenu")
}
<h3 class="title">
    <span>操作教學影片</span>
</h3>
<div class="alert alert-warning" role="alert">
    <p>1. 如無法觀看操作教學影片，請<a class="alert-link" href="http://get.adobe.com/shockwave/" target="new">按此下載 Flash 播放器</a>並安裝。</p>
    <p>2. 影片開啟後，可點選 <i class="fa-arrows-alt"></i> 圖示，以全螢幕方式觀看。</p>
</div>

<ul class="list-link list-unstyled">
    @foreach (DocInfo doc in Model)
    {
        <li><a href="@doc.Link" target="new"><i>@doc.Sort</i>@doc.Momo</a></li>
    }
</ul>
